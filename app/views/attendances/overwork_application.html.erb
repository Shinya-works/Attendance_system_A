<% provide(:class_text, 'overwork_application') %>
<% provide(:button_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h2 class="modal-title">【残業申請】</h2>
          <table class="table table_bordered table_striped overtime_application_table">
            <thead>
              <tr>
                <th>日付</th>
                <th>曜日</th>
                <th>終了予定時間</th>
                <th>翌日</th>
                <th>業務処理内容</th>
                <th>指示者確認㊞</th>
              </tr>
            </thead>
            <tbody>
              <%= form_with(model: @attendance, url: attendances_update_overwork_user_path(@user) local: true) do |f| %>
                <tr>
                  <td><%= l(day.worked_on, format: :short) %></td>
                  <td><%= "wday_#{day.worked_on.wday}"%>><%= $days_of_the_week[day.worked_on.wday] %></td>
                  <td><%= f.time_field :expected_end_time, class: "form-control" %></td>
                  <td><%= f.check_box :next_day, class: "form-control" %></td>
                  <td><%= f.text_field :business_processing_details, class: "form-control" %></td>
                  <td><%= f.select(:authentication_user, superiors_user(@users), class: "form-control") %></td>

                  <%= f.submit yield(:btn_text), class: "btn btn-primary btn-block label-#{yield(:class_text)}" %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>