<% provide(:title, 'list_of_employees') %>

<div class="container">
  <h1 class="title_h1">出勤社員一覧</h1>
  <table class="table table-bordered table-striped">
    <tbody>
      <tr>
        <th style="width :30%;">社員番号</th>
        <th style="width :35%;">名前</th>
      </tr>
      <% @users.each do |user| %>
        <% user.attendances.each do |attendance| %>

          <% if (Date.current == attendance.worked_on) &&
            attendance.started_at != nil &&
            attendance.finished_at == nil %>
            <% debugger %>
            <tr>
              <td><%= user.employee_number %></td>
              <td><%= user.name %></td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>