<% provide(:title, 'Base_index') %>

<div class="container">
  <h1 class="title_h1">拠点一覧</h1>
  <table class="table table-striped table-bordered base_table">
    <tbody>
      <% @bases.each do |base| %>
        <tr>
          <td></td>
          <td></td>
          <td>拠点番号</td>
          <td>拠点名</td>
          <td>勤怠種類</td>
        </tr>
        <tr>
          <td><%= link_to "修正", edit_basis_path(base.id), class: "btn btn-primary" %></td>
          <td>
            <%= link_to "削除", base, method: :delete,
            data: { confirm: "削除してもよろしいですか。"},
            class: "btn btn-primary" %>
          </td>
          <td><%= base.base_number %></td>
          <td><%= base.base_name %></td>
          <td><%= base.time_type %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "拠点情報追加", new_basis_path, remote: true, class: "btn btn-primary btn-lg" %>
</div>

<!--モーダルウィンドウ表示-->
<div id="new" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>